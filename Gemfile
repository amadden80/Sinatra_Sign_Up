# Where should Bundler look for gems?
source 'https://rubygems.org'


# This is a sinatra application
gem 'sinatra'
gem 'sinatra-reloader'


# Rake tasks need rake to run
gem 'rake'


# Active Record is our object relations mapper
gem 'sinatra-activerecord'
gem 'activerecord', '~> 3.2.13'


# Needed for active record to work with postgresql
# This is our adapter
gem 'pg'